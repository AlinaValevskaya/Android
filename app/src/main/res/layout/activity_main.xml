<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.calculate.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/resultText"
        android:inputType="numberDecimal" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/layoutOne"
        android:layout_below="@+id/resultText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp">

    <Button
        android:text="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/NumOne" />

    <Button
        android:text="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/NumTwo" />

    <Button
        android:text="3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/NumThree" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutTwo"
        android:layout_below="@+id/layoutOne"
        android:layout_alignLeft="@+id/layoutOne"
        android:layout_alignStart="@+id/layoutOne">

        <Button
            android:text="4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/NumFour" />
        <Button
            android:text="5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/NumFive" />
        <Button
            android:text="6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/NumSix" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutThree"
        android:layout_below="@+id/layoutTwo"
        android:layout_alignLeft="@+id/layoutTwo"
        android:layout_alignStart="@+id/layoutTwo">

        <Button
            android:text="7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/NumSeven" />

        <Button
            android:text="8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/NumEight" />

        <Button
            android:text="9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/NumNine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutFour"
        android:layout_below="@+id/layoutThree"
        android:layout_alignLeft="@+id/layoutThree"
        android:layout_alignStart="@+id/layoutThree">

        <Button
            android:text="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/NumZero" />

        <Button
            android:text="."
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/Point" />

        <Button
            android:text="C"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/layoutOne"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:id="@+id/layoutFive">

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Plus" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Minus" />

        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Multi" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/div" />
    </LinearLayout>

    <Button
        android:text="="
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Equal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_alignLeft="@+id/layoutFour"
        android:layout_alignStart="@+id/layoutFour" />
</RelativeLayout>
